<div class = "row ">
  <div class = "col s12 m6 push-m3 row-login">
    <h5 class = "deep-purple-text text-accent-2 h5-login">Log in to your account</h5>
    <div class = "col s12 m10 push-m1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="input-field">
          <i class="material-icons prefix">email</i>
          <%= f.email_field :email, autofocus: true, class: "validate email-login", placeholder: "Your Email" %>
        </div>

        <div class="input-field">
          <i class="material-icons prefix">lock_outline</i>

          <%= f.password_field :password, autocomplete: "off", class: "validate", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="input-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end -%>

        <div class="input-field">
          <%= f.submit "Log in", class: "btn-login waves-effect waves-purple btn" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      </div>
  </div>
</div>

<div class = "row">
  <div class = "col s12 m10 push-m1">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class = "card-title">Login</span>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-field">

        <%= f.email_field :email, autofocus: true, class: "validate", placeholder: "Your Email" %>
      </div>

      <div class="input-field">

        <%= f.password_field :password, autocomplete: "off", class: "validate", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="input-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <% end -%>

      <div class="input-field">
        <%= f.submit "Log in", class: "btn-create-product waves-effect waves-purple btn" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>


  </div>
</div>

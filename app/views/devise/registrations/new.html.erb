<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class = "input-field">
    <%= f.label :username %><br />
    <%= f.text_field :username,class: "validate", autofocus: true %>
  </div>

  <div class="input-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "validate" %>
  </div>

  <div class="input-field">
    <%= f.label :password %>
    <br />
    <%= f.password_field :password, autocomplete: "off", class: "validate", placeholder: "minimum 6 caracters" %>
  </div>

  <div class="input-field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "validate" %>
  </div>

  <div class="actions">
    <button class = "btn waves-effect waves-light"><%= f.submit "Sign up"%> <i class="material-icons right">send</i></button>
  </div>
<% end %>

<%= render "devise/shared/links" %>

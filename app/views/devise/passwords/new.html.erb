<div class = "row">
  <div class = "col s12 m10 push-m1">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class = "card-title">Forgot your password?</span>
      </div>
    </div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-field">
    <%= f.email_field :email, autofocus: true, class: "validate", placeholder: "Your Email" %>
  </div>

  <div class="input-field">
    <%= f.submit "Send me reset password instructions", class: "btn-create-product waves-effect waves-purple btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
